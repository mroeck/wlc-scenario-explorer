{
  "name": "Scenario-explorer Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "target": "dev"
  },
  "shutdownAction": "none",
  "initializeCommand": "echo 'this is needed to use devcontainer.json @see: https://github.com/microsoft/vscode-remote-release/issues/9302#issuecomment-1854476541';",
  "runArgs": [
    "/bin/bash"
],
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "postCreateCommand": "cd backend && poetry install && cd ../frontend && pnpm install && pnpm exec playwright install && pnpm exec playwright install-deps",
  "customizations": {
		"vscode": {
			"settings": {
        "typescript.tsdk": "frontend/node_modules/typescript/lib",
        "[javascript]": {
          "editor.formatOnSave": false,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascriptreact]": {
          "editor.formatOnSave": false,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.formatOnSave": false,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
      
        },
        "[typescriptreact]": {
          "editor.formatOnSave": false,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
			},
			"extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "exiasr.hadolint",
        "esbenp.prettier-vscode",
        "yoavbls.pretty-ts-errors",
        "charliermarsh.ruff",
        "bradlc.vscode-tailwindcss"
			]
		}
	},
}